<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.icebery.myjavacode.mapper.BookMapper">
    <select id="getBookById" resultType="com.icebery.myjavacode.entity.Book">
        SELECT * from Book where id=#{id}
    </select>
    
    <insert id="insertBook">
        insert into book(id,name,anthor) values (#{id},#{name},#{anthor})
    </insert>
</mapper>
